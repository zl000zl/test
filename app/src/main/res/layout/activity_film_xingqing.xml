<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#000">

        <ImageView
            android:id="@+id/film_image"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/film_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#fff"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/film_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#fff"/>
            </LinearLayout>

            <RatingBar
                android:id="@+id/film_rab"
                android:layout_width="wrap_content"
                android:numStars="5"
                style="?ratingBarStyleSmall"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/film_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#fff"/>

                <TextView
                    android:id="@+id/film_think"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="想看"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/film_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#fff"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:id="@+id/film_jieshao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pl_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000" />

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/pl_skip"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/commentpl" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/film_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/film_shop"
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:text="特惠购票"
            android:background="@drawable/style_button"
            android:textColor="#fff"/>



</LinearLayout>
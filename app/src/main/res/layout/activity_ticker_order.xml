<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newtext.Movie.Activity.Ticker_order"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#000">

        <ImageView
            android:id="@+id/ticker_image"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticker_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#fff"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/ticker_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#fff"/>
            </LinearLayout>

            <RatingBar
                android:id="@+id/ticker_rab"
                android:layout_width="wrap_content"
                android:numStars="5"
                style="?ratingBarStyleSmall"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/ticker_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/ticker_think"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/ticker_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#fff"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ticker_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/ticker_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="#000"/>
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:id="@+id/ticker_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="#000"/>

    <Button
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:id="@+id/ticker_enter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="确认支付"
        android:textColor="#BF2121"
        android:background="@drawable/style_shop"/>


</LinearLayout>
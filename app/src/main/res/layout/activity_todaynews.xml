<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.newtext.NewClass.Todaynews">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:lines="2"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:background="#EFEDED"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_image1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_news1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="textView"
                    android:textColor="#CB000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="更多新闻推荐"
                    android:textColor="#000" />

                <RelativeLayout
                    android:id="@+id/rl_going"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CEB3DDFF"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/image_stu"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tv_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/image_stu"
                        android:text="TextView"
                        android:textColor="#000" />

                    <ImageView
                        android:id="@+id/iv_dianzhan"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@id/image_stu"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/image_stu"
                        android:src="@drawable/dz" />

                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_dianzhan"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/iv_dianzhan"
                        android:text="300"
                        android:textColor="#D3000000" />

                    <TextView
                        android:id="@+id/tv_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_dianzhan"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="textView" />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/text"
            android:text="10"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/shuru" />

            <TextView
                android:id="@+id/et_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="说说你的看法"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/comment" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newtext.Allservice.PkrecordActivity"
    android:background="#EFEDED">

    <RelativeLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp">


            <RelativeLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择出入时间进行查询"
                    android:textColor="#000000"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layerType="software"
                    android:background="@drawable/line" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_show3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入场时间"
                    android:textColor="#7083EC"
                    android:layout_below="@id/textView9"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView9"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textColor="#000"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_toLeftOf="@id/tv_time"
                    android:layout_below="@id/textView9"
                    android:layout_marginRight="15dp"
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期"
                    android:textSize="13sp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_below="@id/tv_show3"
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layerType="software"
                    android:background="@drawable/line" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_show6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出场时间"
                    android:textColor="#7083EC"
                    android:layout_below="@id/textView10"
                    android:textSize="13sp"/>


                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView10"
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textColor="#000"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_toLeftOf="@id/tv_time1"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/textView10"
                    android:id="@+id/tv_day1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期"
                    android:textColor="#000"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_below="@id/tv_show6"
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layerType="software"
                    android:background="@drawable/line" />

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="搜索"
                    android:background="@drawable/pack"
                    android:textColor="#fff"
                    android:layout_below="@id/line5"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/card1"
            android:id="@+id/rv_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btn_much1"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="更多记录"
            android:background="@drawable/pack"
            android:textColor="#fff"
            android:layout_below="@id/rv_record"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/image_stu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_toRightOf="@id/image_stu"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000"/>
        <ImageView
            android:id="@+id/iv_dianzhan"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/liulan"
            android:layout_toRightOf="@id/image_stu"
            android:layout_alignBottom="@id/image_stu"
            android:layout_marginLeft="20dp"
            android:background="#C6C4C4"/>
        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:layout_toRightOf="@id/iv_dianzhan"
            android:layout_alignBottom="@id/iv_dianzhan"
            android:layout_marginLeft="3dp"
            android:textColor="#D3000000"/>
        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textView"
            android:layout_alignBottom="@id/iv_dianzhan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

</LinearLayout>
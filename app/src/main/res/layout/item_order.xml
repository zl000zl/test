 <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="15dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <LinearLayout
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:id="@+id/textView20"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:text="订单："
                 android:textColor="#3F51B5"
                 android:textSize="15sp" />

             <TextView
                 android:id="@+id/der_number"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_weight="1"
                 android:text="订单"
                 android:textColor="#3F51B5"
                 android:textSize="15sp" />

             <TextView
                 android:id="@+id/der_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="right"
                 android:layout_marginRight="15dp"
                 android:text="8"
                 android:textColor="#951209"
                 android:textSize="17sp" />
         </LinearLayout>

         <View
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:layerType="software"
             android:background="@drawable/dottedline" />


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <ImageView
                 android:id="@+id/imageView10"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_gravity="center"
                 android:layout_marginLeft="2dp"
                 android:scaleType="fitXY"
                 app:srcCompat="@drawable/bus" />

             <TextView
                 android:id="@+id/der_first"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginLeft="10dp"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textColor="#000"
                 android:textSize="14sp"/>

             <ImageView
                 android:id="@+id/imageView11"
                 android:layout_width="0dp"
                 android:layout_height="25dp"
                 android:layout_gravity="center"
                 android:layout_marginRight="20dp"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/jiantou" />

             <TextView
                 android:id="@+id/der_end"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textColor="#000"
                 android:textSize="14sp"/>
         </LinearLayout>
         <View
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="?android:attr/listDivider" />

         <LinearLayout
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_marginLeft="15dp"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text=" 线路"
                 android:textColor="#000"/>

             <TextView
                 android:id="@+id/der_line"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textColor="#000"/>
         </LinearLayout>
         <View
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="?android:attr/listDivider" />

         <LinearLayout
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_marginLeft="15dp"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="乘车人"
                 android:textColor="#000"/>

             <TextView
                 android:id="@+id/der_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textColor="#000"/>
         </LinearLayout>
         <View
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="?android:attr/listDivider" />

         <LinearLayout
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_marginLeft="15dp"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="手机号"
                 android:textColor="#000"/>

             <TextView
                 android:id="@+id/der_phone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textColor="#000"/>
         </LinearLayout>
         <View
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="?android:attr/listDivider" />

         <Button
             android:id="@+id/der_pay"
             android:layout_width="80dp"
             android:layout_height="22dp"
             android:layout_gravity="right"
             android:layout_marginRight="10dp"
             android:background="@drawable/shape3"
             android:text="立即支付"
             android:textColor="#fff" />


     </LinearLayout>


 </androidx.cardview.widget.CardView>
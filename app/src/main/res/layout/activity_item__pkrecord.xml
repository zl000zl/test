<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="20dp">


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pt1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#445DE6"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_pt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="TextView"
                    android:textColor="#FABE0B"
                    android:textSize="16sp" />


            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layerType="software"
                android:background="@drawable/dottedline" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_show3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入场时间"
                android:layout_below="@id/textView9"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_pt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_show3"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出场时间"
                android:layout_below="@id/tv_show3"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_show3"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tv_show3"
                android:id="@+id/tv_pt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="14sp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_show5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停车场名称"
                android:layout_below="@id/tv_min"
                android:textSize="14sp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_show5"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tv_min"
                android:id="@+id/tv_pt5"
                android:layout_width="match_parent"
                android:lines="2"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="14sp"/>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
